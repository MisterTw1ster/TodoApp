<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonPrimary">
        <item name="android:background">@drawable/shp_rounded_button_primary</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">10sp</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonSecondary">
        <item name="android:background">@drawable/shp_rounded_button_secondary</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">10sp</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/label_primary</item>
    </style>

    <style name="TextTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">12sp</item>
        <item name="android:textColor">@color/label_primary</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextSmallTitle">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/label_primary</item>
    </style>

    <style name="TextRegular">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/label_primary</item>
    </style>

</resources>