<?xml version="1.0" encoding="utf-8"?>
<resources>

    // font style
    <style name="text_large_title">
        <item name="android:textSize">32sp</item>
        <item name="android:lineSpacingExtra">38sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
    <style name="text_title">
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">32sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
    <style name="text_button">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">24sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
    <style name="text_body">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">20sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
    <style name="text_subhead">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">20sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    // label style
    <style name="label_primary_large_title" parent="text_large_title">
        <item name="android:textColor">@color/label_primary</item>
    </style>
    <style name="label_primary_body" parent="text_body">
        <item name="android:textColor">@color/label_primary</item>
    </style>
    <style name="label_tertiary_body" parent="text_body">
        <item name="android:textColor">@color/label_tertiary</item>
    </style>
    <style name="label_tertiary_button" parent="text_button">
        <item name="android:textColor">@color/label_tertiary</item>
    </style>

    <style name="TextAppearance.Medium" parent="TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextAppearance.Regular" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TextAppearance.LargeTitle" parent="TextAppearance.Medium">
        <item name="android:textSize">32sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
    </style>

    <style name="TextAppearance.Title" parent="TextAppearance.Medium">
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">12sp</item>
    </style>

    <style name="TextAppearance.Button" parent="TextAppearance.Regular">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">10sp</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="TextAppearance.Body" parent="TextAppearance.Regular">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textColor">@color/label_primary</item>
    </style>

    <style name="TextAppearance.Subhead" parent="TextAppearance.Regular">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
    </style>

</resources>