<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_importance_task"
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        tools:background="@color/color_red"/>

    <CheckBox
        android:id="@+id/cb_is_done_task"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:button="@drawable/is_done_checkbox"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/tw_text_task"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:textAlignment="viewStart"
            android:singleLine="false"
            android:maxLines="3"
            android:ellipsize="end"
            android:textAppearance="@style/TextAppearance.Body"
            android:textColor="?android:attr/textColorPrimary"
            tools:text="Task" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cnt_subtask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Subhead"
                android:textColor="?android:attr/textColorTertiary"
                android:text="1 of 2" />

            <TextView
                android:id="@+id/tv_deadline_task"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="4dp"
                tools:text="22.01.2022"
                app:drawableLeftCompat="@drawable/ic_calendar"
                android:textAppearance="@style/TextAppearance.Subhead"
                android:textColor="?android:attr/textColorTertiary"
                android:drawablePadding="4dp" />

            <TextView
                android:id="@+id/tv_attach_file"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="4dp"
                app:drawableLeftCompat="@drawable/ic_attach_file"
                android:textAppearance="@style/TextAppearance.Subhead"
                android:textColor="?android:attr/textColorTertiary" />

        </LinearLayout>


    </LinearLayout>

    <CheckBox
        android:id="@+id/cb_is_favorite"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:button="@drawable/is_favorite_checkbox"/>

</LinearLayout>
