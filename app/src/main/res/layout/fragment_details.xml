<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_primary"
    android:backgroundTint="@color/back_primary"
    android:orientation="vertical">

    <include
        android:id="@+id/standard_toolbar"
        layout="@layout/view_standard_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_marginTop="8dp"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingHorizontal="8dp">

                <TextView
                    style="@style/label_primary_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="28dp"
                    android:text="Текс" />

                <EditText
                    android:id="@+id/et_textTask"
                    style="@style/label_primary_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/shape"
                    android:gravity="top|start"
                    android:hint="..."
                    android:inputType="textMultiLine"
                    android:minLines="3" />

                <TextView
                    style="@style/label_primary_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="28dp"
                    android:text="Важность" />

                <Spinner
                    android:id="@+id/spin_importanceTask"
                    style="@style/label_primary_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp" />

                <include layout="@layout/view_separator" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/sm_deadlineSwitch"
                    style="@style/label_primary_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:paddingTop="43dp"
                    android:text="Сделать до" />

                <TextView
                    android:id="@+id/tv_deadlineDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:text="2 июля 2021" />

            </LinearLayout>

            <include layout="@layout/view_separator" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_save_task"
                style="@style/TextAppearance.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="32dp"
                android:layout_marginTop="64dp"
                android:background="@drawable/shp_button_primary"
                android:text="сохранить"
                android:textColor="@color/white" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_delete_task"
                style="@style/TextAppearance.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="32dp"
                android:layout_marginTop="@dimen/standard_distance_between_buttons"
                android:background="@drawable/shp_button_secondary"
                android:text="удалить" />

            <!--            <LinearLayout-->
            <!--                android:id="@+id/ll_deleteTaskButton"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:clickable="true"-->
