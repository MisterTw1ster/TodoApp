<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:layout_height="wrap_content"
    tools:layout_width="match_parent"
    tools:parentTag="androidx.coordinatorlayout.widget.CoordinatorLayout">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_deadline_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shp_button_secondary">

      <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:indeterminate="true"
            android:indeterminateTint="@color/support_border_primary"
            android:indeterminateTintMode="src_atop" />

        <TextView
            android:id="@+id/tv_message"
            style="@style/label_primary_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:gravity="center"
            android:text="Задача удалена"
            android:textColor="#28140c" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Отмена"
            android:layout_marginEnd="16dp"
            android:textAppearance="@style/TextAppearance.Button"
            android:textColor="@color/support_fill_secondary" />


    </androidx.appcompat.widget.LinearLayoutCompat>

</merge>